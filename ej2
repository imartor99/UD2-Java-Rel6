/*Realizar un programa que comprueba si una cadena le√≠da por teclado comienza por una subcadena
introducida por teclado.*/

import java.util.Scanner;

public class ej2 {
    public static void main(String[] args) {
         String cad;
         String subcad;
         boolean comprobar;

          Scanner entrada1 = new Scanner(System.in);
          Scanner entrada2 = new Scanner(System.in);

          System.out.print("Introduce una cadena: ");
          cad = entrada1.nextLine();

          System.out.print("Introduce la subcadena: ");
          subcad = entrada2.nextLine();

          comprobar = cad.startsWith(subcad);

          if (comprobar == true) {
               System.out.println("Empieza por la subcadena");
          } else {
               System.out.println("No empieza por la subcadena");
          }
    }
}
